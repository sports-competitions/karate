<div class="page-header">
  <%= link_to people_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_person_path(@person), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show person</h1>
</div>

<dl class="dl-horizontal">
  <dt>Registrator:</dt>
  <dd><%= "#{@person.registrator.last_name} #{@person.registrator.first_name}" %></dd>

  <dt>First name:</dt>
  <dd><%= @person.first_name %></dd>

  <dt>Middle name:</dt>
  <dd><%= @person.middle_name %></dd>

  <dt>Last name:</dt>
  <dd><%= @person.last_name %></dd>

  <dt>Birthday:</dt>
  <dd><%= @person.birthday %></dd>

  <dt>Sex:</dt>
  <dd><%= @person.sex %></dd>

  <dt>Kind:</dt>
  <dd><%= @person.kind %></dd>

  <dt>Kind data:</dt>
  <dd><%= @person.kind_data %></dd>

</dl>
