<%= form_for(@person, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @person.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@person.errors.count, "error") %> prohibited this person from being saved:</h4>

      <ul>
      <% @person.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :first_name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :first_name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :middle_name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :middle_name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :last_name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :last_name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :birthday, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.date_select :birthday, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :sex, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.radio_button :sex, 'male' %>
      <%= f.label 'Male' %>
      <%= f.radio_button :sex, 'female' %>
      <%= f.label 'Female' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :kind, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.select(:kind, Person::KIND.to_a.map{ |w| w.capitalize }, {}, { class: "form-control" }) %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :kind_data, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :kind_data, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
