<h3>Учасники</h3>
<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>#</th>
        <th>ПІБ</th>
        <% @event.combats.each do |combat| %>
          <th><%= combat.name %></th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <%= form_tag("/select_combats") do %>
        <% @people.each_with_index do |person, index| %>
          <tr>
            <td>
              <%= index+1 %>
            </td>
            <td>
              <%= person.full_name %>
            </td>
              <% @event.combats.each do |combat| %>
                <td>
                  <%= check_box_tag "combat_ids[#{combat.id}]", combat.id %>
                </td>
              <% end %>
          </tr>
        <% end %>
        <%= submit_tag "Підтвердити", class:"btn btn-success pull-right" %>
      <% end %>
    </tbody>
  </table>
</div>
