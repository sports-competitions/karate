<%= form_for([@event,@register], html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @register.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@register.errors.count, "error") %> prohibited this register from being saved:</h4>

      <ul>
      <% @register.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, "Назва", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :people, "Спортсмени", class: "col-sm-2 control-label" %>
    <div class="col-sm-10 checkbox-list">
      <%= f.collection_check_boxes(:person_ids, @people || [], :id, :full_name) %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit value: "Створити заявку", class: "btn btn-primary pull-right" %>
    </div>
  </div>
<% end %>
