<div class="page-header">
  <%= link_to events_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_event_path(@event), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show event</h1>
</div>

<dl class="dl-horizontal">
  <dt>Name:</dt>
  <dd><%= @event.name %></dd>

  <dt>Address:</dt>
  <dd><%= @event.address %></dd>

  <dt>Start date:</dt>
  <dd><%= @event.start_date %></dd>

  <dt>End date:</dt>
  <dd><%= @event.end_date %></dd>

  <dt>Details:</dt>
  <dd><%= @event.details %></dd>

  <h3>Event structure</h3>

  <% @event.team_structure.each do |structure| %>
      <dt>Sportsmen:</dt>
      <dd><%= structure.sportsmen %></dd>

      <dt>Judges:</dt>
      <dd><%= structure.judges %></dd>

      <dt>Trainers:</dt>
      <dd><%= structure.trainers %></dd>

      <dt>Delegates:</dt>
      <dd><%= structure.delegates %></dd>
  <% end %>

</dl>
