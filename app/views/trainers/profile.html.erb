<h1>My profile</h1>

<div class="profile-menu">
  <div class="row">
    <div class="col-sm-3">
      <a href="#" class="profile-menu-link show-my-sportsmen">
        <i class="fa fa-users"></i>
        <p>Мои спортсмены</p>
      </a>
    </div>
    <div class="col-sm-3">

      <%= link_to new_student_path, class: 'profile-menu-link' do %>
        <i class="fa fa-user-plus"></i>
        <p>Новый спортсмен</p>
      <% end %>
    </div>

  </div>
</div>

<div class="my-sportsmen">
  <h3>Мои спортсмены</h3>
  <% if @students.present? %>
    <table class="table table-striped">
      <thead>
        <tr>
          <td>Имя</td>
          <td>Дата рождения</td>
          <td>Вес</td>
          <td>Пол</td>
          <td></td>
          <td></td>
        </tr>
      </thead>
      <tbody>
        <% @students.each do |student| %>
            <%= render partial: 'students/student', locals: { student: student } %>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p>У вас еще нету спортсменов</p>
  <% end %>

</div>